<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <import type="android.view.View" />

        <variable
            name="playlistsFragmentVM"
            type="com.startogamu.zikobot.home.playlists.PlaylistsFragmentVM" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/playlists_fragment_app_bar"
            layout="@layout/playlists_fragment_app_bar"
            app:playlistsFragmentVM="@{playlistsFragmentVM}" />

        <com.joxad.androidtemplate.core.view.list.AnimatedGridRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/grid_animation"
            app:itemBinding="@{playlistsFragmentVM.itemBinding}"
            app:items="@{playlistsFragmentVM.items}"
            app:layoutManager="@{LayoutManagers.grid(2)}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{playlistsFragmentVM::expandToolbar}"
            android:visibility="@{playlistsFragmentVM.items.isEmpty() ? View.VISIBLE: View.GONE}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <include
                layout="@layout/zikobot_message"
                android:layout_centerInParent="true"
                app:title="@{@string/empty_state_playlist}"
                app:visible="@{playlistsFragmentVM.items.isEmpty()}"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

</layout>
