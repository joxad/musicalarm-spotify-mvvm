<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <variable
            name="albumsFragmentVM"
            type="com.startogamu.zikobot.home.albums.AlbumsFragmentVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.joxad.androidtemplate.core.view.list.AnimatedGridRecyclerView
            android:id="@+id/albumsFragmentRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:layoutAnimation="@anim/grid_animation"
            android:paddingBottom="@dimen/paddingBottom"
            app:itemBinding="@{albumsFragmentVM.itemBinding}"
            app:items="@{albumsFragmentVM.items}" />


        <xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller
            android:id="@+id/fast_scroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="@dimen/paddingBottom"
            />

        <include
            layout="@layout/layout_loading_state"
            android:visible="@{albumsFragmentVM.loading}" />
    </RelativeLayout>

</layout>
