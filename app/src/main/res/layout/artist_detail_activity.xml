<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <variable
            name="artistDetailActivityVM"
            type="com.startogamu.zikobot.home.artists.ArtistDetailActivityVM" />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_detail_activity"
            layout="@layout/toolbar_detail_activity"
            app:image="@{artistDetailActivityVM.artistVM.image}"
            app:title="@{artistDetailActivityVM.artistVM.name}" />


        <android.support.v4.view.ViewPager
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/artist_detail_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        <android.support.v7.widget.CardView
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:behavior_peekHeight="@dimen/view_player_height"
            app:cardElevation="16dp"
            app:layout_behavior="@string/bottom_sheet_behavior">


            <include
                android:id="@+id/view_player"
                layout="@layout/player_view_bottom"
                app:playerVM="@{artistDetailActivityVM.playerVM}" />
        </android.support.v7.widget.CardView>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:onClick="@{artistDetailActivityVM::playAll}"
            android:visibility="visible"
            app:fabSize="normal"
            app:layout_anchor="@id/artist_detail_view_pager"
            app:layout_anchorGravity="end|top"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ic_play_white" />
    </android.support.design.widget.CoordinatorLayout>

</layout>
