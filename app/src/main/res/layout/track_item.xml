<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="trackVM"
            type="com.startogamu.zikobot.home.track.TrackVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="@{trackVM::onClick}"
        android:onLongClick="@{trackVM::addToPlaylist}"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/bt_height"
            android:layout_height="@dimen/bt_height"
            app:imageUrl="@{trackVM.image}"
            app:srcCompat="@drawable/ic_vinyl"
            app:imageError="@{@drawable/ic_vinyl}"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/trackItemIvMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{trackVM::onMenuClick}"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_toStartOf="@id/trackItemIvMore"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{trackVM.title}"
                    android:textStyle="bold"
                    tools:text="When the words are too hard" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{trackVM.artistName}"
                    tools:text="Joxad" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>
